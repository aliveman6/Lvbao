page{
  background-image: url(https://636c-cloud1-0gsuywlee1316d01-1309842656.tcb.qcloud.la/image/bgc.jpg);
  background-attachment: fixed;
}

.page {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  margin: 10rpx auto 0px auto;
}

.page-content {
  flex: 1;
  border: 0px blue solid;
  border-radius: 20rpx;
  box-shadow: 0px 5rpx 17rpx rgba(0, 0, 0, 0.2);
  background-color: #fff;
}

.page-module {
  padding: 40rpx 40rpx;
  border-radius: 20rpx  20rpx 0px 0px;
  box-shadow: 0px 5rpx 17rpx rgba(0, 0, 0, 0.2);
  background-color: #fff;
  font-family: KaiTi;
}
.page-module .title{
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 20rpx;
  text-align: center;
}
.page-module .author{
  font-size: 30rpx;
  margin-top: 20rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.page-module .content{
  font-size: 35rpx;
}
.page-footer {
  position: relative;
  width: 100%;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
}

/* 评论列表 start */
.evaluation-wrap {
  padding: 20rpx;
}

.evaluation__item {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 1.2;
  background-color: #fff;
}

.evaluation__content {
  flex: 1;
}
.evaluation__name {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.evaluation__time {
  color: #ccc;
  font-size: 24rpx
}

.evaluation-end {
  height: 0;
  font-size: 0;
  background-color: #999;
}

.evaluation_title{
  font-size: 40rpx;
  margin-top: 40rpx;
  margin-left: 40rpx;
}

/* 评论列表 end */

/* 评论框  */

.commentContent {
  border-radius: 50rpx;
  border: 2rpx solid #f0f0f0;
  line-height: 2;
  font-size: 24rpx;
  padding: 20rpx;
  color: #999;
  background-color: #fff;
  box-shadow: 0px 5rpx 17rpx rgba(0, 0, 0, 0.2);
}
.evaluation__avatar image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #ccc;
  margin-right: 20rpx;
}
.recommend{
  width: 200rpx;
  height: 200rpx;
  border: 3rpx solid #ccc;
  border-radius: 50%;
  margin: 100rpx auto 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ccc;
}
.recommend .icon{
  font-size: 66rpx;
}
.recommend .num{
  font-size: 32rpx;
  padding-top: 5rpx;
}
.recommend.active{
  color: #fff;
  background-color: #31C581;
  border: none;
}
.collection{
  width: 200rpx;
  height: 200rpx;
  border: 3rpx solid #ccc;
  border-radius: 50%;
  margin: 100rpx auto 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.collection.active{
  color: #fff;
  background-color: #eaee14;
  border: none;
}
.collection_img{
  width: 70rpx;
}
.userinfo{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.picgroup{
  padding-left: 50rpx;
}
.picgroup image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin-left: -50rpx;
}
.userinfo .text{
  color: #666;
  font-size: 30rpx;
  padding-bottom: 20rpx;
}
.text_status{
  margin-top: 60rpx;
}
.row{
  margin-top: 40rpx;
  margin-left: 40rpx;
}

.skeleton{
  margin-top: 60rpx;
}
.likeAndCollection{
  display: flex;
  flex-direction: row;
}
