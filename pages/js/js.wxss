body {
  background-color: #f3f3f3;
}

.main {
  border: 2rpx solid #bfa;
  width: 90%;
  background-color: #fff;
  margin: 60rpx auto;
  border-radius: 20rpx;
  box-shadow: 0px 5rpx 17rpx #e0e0e0;
}

.head {
  color: #31c581;
  text-align: center;
  font-size: 70rpx;
  font-weight: 500;
}

.body {
  padding: 16rpx 10rpx;
  text-indent: 2em;
  font-size: 35rpx;
  font-weight: 700;
  color: #2f4858;
}

.img {
  width: 90%;
  margin: 0 auto;
}

image {
  width: 600rpx;
  display: inline-block;
  overflow: hidden;
  border-radius: 20rpx;
}