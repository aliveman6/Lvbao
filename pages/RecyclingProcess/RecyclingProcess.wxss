page {
  font-size: 0.8rem;
  font-family: KaiTi;
  background-image: url(https://636c-cloud1-0gsuywlee1316d01-1309842656.tcb.qcloud.la/image/bgc.jpg);
  background-attachment: fixed;
}

.topExpress {
  width: 720rpx;
  height: 180rpx;
  background: whitesmoke;
  margin: 60rpx auto 50rpx auto;
  display: flex;
  border-radius: 20rpx;
  box-shadow: 0px 5rpx 17rpx rgba(0, 0, 0, 0.2);
  background-color: #fff;
}


.topExpress-right {
  color: #6BBF42;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: flex-start;
  padding: 20rpx 5rpx;
  text-align: center;
  margin-left: 40rpx;
  font-size: 60rpx;
  font-family: KaiTi;
}

.express-container {
  width: 720rpx;
  margin: 10rpx auto;
  border-radius: 10rpx;
  padding:10rpx 0px;
  border-radius: 20rpx;
  box-shadow: 0px 5rpx 17rpx rgba(0, 0, 0, 0.2);
  background-color: #fff;
}

.express-item {
  display: flex;
  width: 90%;
  justify-content: start;
  margin: 40rpx 40rpx 40rpx 30rpx;
}

.express-middle-axis {
  display: flex;
  width: 48rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.express-status{
  padding: 30rpx;
  width: 500rpx;
  white-space: pre-line;
}

.express-left_1 {
  display: flex;
  width: 900rpx;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.online-top-closing {
  width: 2rpx;
  height: 80rpx;
  background: #d7d7d7;
}

.dot-closing {
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  background: #6BBF42;
}

.dot-shou {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #999;
  font-size: 18rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.online-bottom {
  width: 2rpx;
  height: 80rpx;
  background: #999;
}

.express-right {
  display: flex;
  flex-grow: 1;
  flex-direction: column;
  margin-right: -10rpx;
  justify-content: center;
  border: 4rpx rgb(40, 224, 199) dashed;
  border-radius: 20rpx;
  border-left-style: hidden;
}
.main{
  margin: auto 40rpx;
}
