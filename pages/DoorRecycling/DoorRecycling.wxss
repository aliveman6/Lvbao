/* 外面的按钮 */

.btn{
  width: 60rpx;
  height: 184rpx;
  line-height: 46rpx;
  font-family: KaiTi;
  font-size: 38rpx;
  position: fixed;
  top: 30%;
  left: 270rpx;
  color: whitesmoke;
}
.btn::after{
  border: 0;
}
 
/* 遮罩层 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}
 
/* 弹出层 */
.modalDlg{
    width: 70%;
    height: 482rpx;
    position: fixed;
    top: 278rpx;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius:48rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
 
/* 弹出层里面的图片 */
.modalDlg image{
  width: 240rpx;
  height: 240rpx;
  margin-top: 60rpx;
}
 
/* 弹出层里面的按钮 */
.ok{
  width: 232rpx;
  height: 70rpx;
  background: #44b549;
  line-height: 76rpx;
  text-align: center;
  color: #fff;
  font-size: 34rpx;
  margin:374rpx auto;
  border-radius: 200rpx;
  font-family: KaiTi;
}

.ok_btn{
  width: 232rpx;
  height: 70rpx;
  background: #2BC78F;
  line-height: 76rpx;
  border-radius: 50rpx;
}

.ok_btn::after{
  border: 0;
}
 
/* 弹出层里面的文字 */
.text{
