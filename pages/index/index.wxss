}

.consult_content text{
  color: grey; 
  font-size: 18rpx; 
  margin: -6rpx 0px 10rpx 20rpx; 
  float: left;
}

.consult_content_article{
  border: blue 0px solid;
  width: 600rpx;
  margin: 54rpx 0px 60rpx 54rpx;
  background-color: #ECEBEB;
}

.consult_content_article .title{
  width: 260rpx;
  float: right;
  margin: 16rpx 34rpx 10rpx 10rpx;
  font-size: 26rpx;
  font-family: KaiTi;
}

.consult_content_article_img{
  width: 228rpx;
  margin: 20rpx 0px 0px 32rpx;
}

.status{
  display: flex;
