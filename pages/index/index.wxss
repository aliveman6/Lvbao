.main{
  margin-top: 50rpx;
}

.intro {
  margin: 60rpx;
  text-align: center;
}

.roundImg{
  width: 290rpx;
  height: 310rpx;
  position: absolute;
  top: 370rpx;
  right: 40rpx;
  -webkit-animation: round_animate 5s linear infinite;
  animation: round_animate 8s linear infinite; 
}

@keyframes round_animate {
to {
    transform: rotate(1turn);
  }
}
.position_img{
  width: 40rpx;
  margin-left: 61rpx;
  margin-right: 20rpx;
  margin-top: 40rpx;
}

.position_text{
  font-size: 30rpx;
  font-family: KaiTi;
  margin-bottom: 40rpx;
}

.appointment{ 
  width: 620rpx;
  height: 120rpx;
  border: blue 0px solid;
  margin: 140rpx auto 80rpx auto;
  border-radius: 20rpx;
  box-shadow: 0px 5rpx 17rpx #e0e0e0;
  background-color: #fff;
}

.appointment .appointment_text{
  font-size: 40rpx;
  color: #17c285;
  padding: 20rpx 0px 0px 34rpx;
  font-family: KaiTi;
}

.appointment .appointment_text2{
  font-size: 25rpx;
  color: grey;
  padding: 4rpx 0px 0px 34rpx;
  font-family: KaiTi;
}

.index_top{
  width: 720rpx;
  height: 400rpx;
  margin: 28rpx auto;
}

.index_top_bg{
  width: 708rpx;
  height: 460rpx;
  margin-left: 4rpx;
  border-radius: 20rpx;
  background: -webkit-linear-gradient(bottom,#6BBF42,#31C581,#19e988);
}

.index_top_bg .swiper_container {
  position: relative;
  margin-top: -376rpx;
  margin-left: 60rpx;
  height: 40rpx;
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  padding-left: 80rpx;
  padding-top: 6rpx;
}

.index_top_bg .swiper_item {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fe4302;
}

.index_top_bg_img{
  width: 370rpx;
  margin-top: 240rpx;
  margin-left: 20rpx;
}

