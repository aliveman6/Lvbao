  width: 700rpx;
  border: blue 0px solid;
  margin: 24rpx auto;
  border-radius: 20rpx;
  box-shadow: 0px 5rpx 20rpx #e0e0e0;
}

.consult_top{
  height: 62rpx;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0px 0px;
}

.consult_top .consult_text{
  font-size: 30rpx;
  color: #38ad38;
  display: inline-block;
  margin: 25rpx 0px 0px 14rpx;
}

.consult_content{
  width: 700rpx;
  background-color: #FFFFFF;
  float: left;
  margin-bottom: 200rpx;
  border-radius: 0px 0px 20rpx 20rpx;
}

.consult .consult_logo_1{
  width: 40rpx; 
  height: 40rpx; 
  margin:20rpx 0px 0px 20rpx; 
  float: left;
}

.consult_content .consult_logo_2{
  width:50rpx; 
  height:50rpx; 
  margin:20rpx 0px 10rpx 50rpx; 
  float: left;
}

.consult_content .lubao_text{
  color: #38ad38; 
  font-size: 25rpx; 
  margin: 0px 0px 10rpx 20rpx;
  padding:20rpx 0px 0px 100rpx;
