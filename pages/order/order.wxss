.main{
  margin-top: 50rpx;
}

.tabs_root{
  width: 90%;
  height: 120rpx;
  display: flex;
  margin: 20rpx 0px 0px 36rpx;
  border-radius: 20rpx;
  box-shadow: 0px 5rpx 17rpx rgba(0, 0, 0, 0.2);
  background-color: #fff;
}

.tabs_item{
  width: 50%;
  display: flex;
  align-self: center;
  justify-content: space-between;
  padding: 20rpx 0px 20rpx 21rpx;
  margin:20rpx 18rpx 20rpx 22rpx;
  font-size: 30rpx;
  font-family: KaiTi;
  line-height: 20rpx;
}

.select_tab{
  border-top: 4rpx solid #2BC78F;
  border-bottom:4rpx solid #2BC78F;
  color: #2BC78F;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}

.body{
  margin-bottom: 300rpx;
}

.order_item{
  width: 90%;
  margin: 20rpx 0px 0px 36rpx;
  border-radius: 20rpx;
  box-shadow: 0px 5rpx 17rpx rgba(0, 0, 0, 0.2);
  background-color: #fff;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}

.message{
  font-size: 28rpx;
  line-height: 22rpx;
  margin: 30rpx 0px 32rpx 56rpx;
  font-family: KaiTi;
}

.cancel::after{
  border: none;
}

.cancel{
  display: inline-block;
  width: 176rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #2BC78F;
  font-family: KaiTi;
  border-radius: 40rpx;
  line-height: 60rpx;
  margin-left: 450rpx;
}

.finish::after{
  border: none;
}

.finish{
  display: inline-block;
  width: 176rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #2BC78F;
  font-family: KaiTi;
  border-radius: 40rpx;
  line-height: 60rpx;
  margin-left: 20rpx;
}