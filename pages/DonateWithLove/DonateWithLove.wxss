.main{
    margin-left: 280rpx;
}

.search_root{
    display: flex;
    flex-direction: row;
    padding: 20rpx;
    align-items: center;
    margin-top: 40rpx;
}

.search_input{
    width: 600rpx;
    height: 75rpx;
    border-radius: 30rpx;
    padding-left: 30rpx;
    background-color: #fff;
    box-shadow: 6rpx 6rpx 10rpx rgba(0, 0, 0, 0.4);
}

.search_icon{
    width: 80rpx;
    height: 80rpx;
}

.title{
    font-size: 40rpx;
    font-weight: bolder;
    margin-left: 34rpx;
    margin-top: 60rpx;
}

.ProjectList{
    display: flex;
    display: -webkit-box;
    flex-direction: column;
}

.item{
    width: 300rpx;
    height: 460rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 40rpx 20rpx 40rpx 40rpx;
    border-radius: 30rpx;
    background-color: #f3f3f3;
    box-shadow: 6rpx 6rpx 10rpx rgba(0, 0, 0, 0.4);
}

.ProjectImg{
    width: 300rpx;
    height: 300rpx;
}

.ProjectTitle{
    font-size: 30rpx;
    display: flex;
    justify-content: center;
    margin-top: 20rpx;
}

.ProjectDescription{
    font-size: 26rpx;
    display: flex;
    justify-content: center;
    padding: 20rpx 30rpx;
}

.placeholder{
    font-family: KaiTi;
}

